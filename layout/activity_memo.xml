<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_memo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.danielpappoe.picloader.Memo"
    android:background="#f1f1f1"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_marginTop="1dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="13dp"
        android:text="Things I Want to do later"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:hint="What do you want to save"
        android:layout_below="@+id/text"
        android:textSize="16sp"
        android:inputType="textAutoComplete|textAutoCorrect"
        />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/button"
        android:layout_below="@+id/editText"
        android:background="@color/colorPrimary"
        android:shadowColor="@color/colorAccent"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/thinking"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        style="?attr/borderlessButtonStyle"
        android:shadowColor="@color/colorAccent"
        android:background="#75cacaca"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentStart="true" />

</RelativeLayout>
