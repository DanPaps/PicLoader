<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post__to__blog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.danielpappoe.picloader.Post_To_Blog"
    android:background="#efefef">
    <ImageButton
        android:id="@+id/blog_image_blog"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:maxHeight="250dp"
        android:adjustViewBounds="true"
        android:contentDescription="blog_image"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_filter_hdr_black_24dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_title_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blog_image_blog"
        android:layout_marginTop="16dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/PhoneNumber"
            android:inputType="phone"
            android:textSize="16dp"
            android:hint="Phone Number"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_desc_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_title_field"
        android:layout_marginTop="16dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/blog_desc_blog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="blog_desc"
            android:inputType="textAutoCorrect|textFilter|textShortMessage|textMultiLine"
            android:textSize="16sp" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/upload"
        android:layout_width="200dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="15dp"
        android:text="upload"
        style="?attr/borderlessButtonStyle"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/input_desc_field" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:maxHeight="250dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/barley"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:maxHeight="250dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/barley1"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
